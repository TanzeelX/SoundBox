{
  "openapi": "3.0.4",
  "info": {
    "title": "SoundBox",
    "version": "1.0"
  },
  "paths": {
    "/api/SoundBox/get-formats": {
      "post": {
        "tags": [
          "SoundBox"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DownloadRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/DownloadRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/DownloadRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/SoundBox/download": {
      "get": {
        "tags": [
          "SoundBox"
        ],
        "parameters": [
          {
            "name": "url",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "formatId",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "audioOnly",
            "in": "query",
            "schema": {
              "type": "boolean",
              "default": false
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/SoundBox/convert-to-audio": {
      "post": {
        "tags": [
          "SoundBox"
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "videoFile": {
                    "type": "string",
                    "format": "binary"
                  },
                  "bitrate": {
                    "type": "string",
                    "default": "192k"
                  }
                }
              },
              "encoding": {
                "videoFile": {
                  "style": "form"
                },
                "bitrate": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DownloadRequest": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}